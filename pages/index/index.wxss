.label{
  border-left: 3px solid #00bcd4;
  display: block;
  padding: 10rpx;
  font-size: 16px;
  color: #212121;
}

.bigBag{
  padding-top: 5rpx;
}


.courses{
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.course{
  width: 220rpx;
  height: 180rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.course .shop{
  display: block;
  width: 200rpx;
  height: 150rpx;
  margin: 0 auto;
}
.course .title{
  display: block;
  color: #212121;
  font-size: 14px;
  width:220rpx;
  margin-top: 5rpx;
  line-height: 30rpx;
  text-align: center;
}

.showPic{
  display: flex;
  justify-content: space-around;
  padding: 3rpx 0;
  background-color: #ccc;
}
.smallPic{
  width: 368rpx;
  height: 370rpx;
}
.bigPic{
  width: 750rpx;
  height: 370rpx;
}

.nav-wrap{
  line-height: 80rpx;
  display: flex;
  background-color: white;
  width: 750rpx;
  position: fixed;
  bottom: 0;
  z-index: 99
}
.nav{
  width: 250rpx;
  text-align: center
}